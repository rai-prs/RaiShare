<div class= "top">
  <div class= "top-main">
    <div class= "container">
      <div class="col-lg-5">
        <div class= "form-frame">
          <div class= "form-area">
            <p class= "form-area-title mb-4">Rai Shareでまだ体験したことのない旅をしよう</p>
            <div class="area_search">
                <%= form_with url: area_path, method: :get, local: true do |f| %>
                  <%= f.label :room_address, "エリア" %>
                  <%= f.text_field :room_address,placeholder: "東京" %>
                  <%= f.submit "探す", class: "btn btn-primary form-control my-3" %>
              　<% end %>
                <%= link_to "一覧", rooms_path, class: "btn btn-outline-info form-control my-3"%>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class= "container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class= "row">
        <div class= "panel-item col-lg-3 col-6">
          <div class= "panel-item1">
            <%= form_with url: area_path, method: :get, class:"form-panel", local: true do |f| %>
              <%= f.hidden_field :room_address, value: "東京" %>
              <%= f.submit "東京", class: "panel-btn" %>
          　<% end %>
          </div>
        </div>
        <div class= "panel-item col-lg-3 col-6">
          <div class= "panel-item2">
            <%= form_with url: area_path, method: :get, class:"form-panel", local: true do |f| %>
              <%= f.hidden_field :room_address, value: "大阪" %>
              <%= f.submit "大阪", class: "panel-btn" %>
          　<% end %>
          </div>
        </div>
        <div class= "panel-item col-lg-3 col-6">
          <div class= "panel-item3">
            <%= form_with url: area_path, method: :get, class:"form-panel", local: true do |f| %>
              <%= f.hidden_field :room_address, value: "京都" %>
              <%= f.submit "京都", class: "panel-btn" %>
          　<% end %>
          </div>
        </div>
        <div class= "panel-item col-lg-3 col-6">
          <div class= "panel-item4">
            <%= form_with url: area_path, method: :get, class:"form-panel", local: true do |f| %>
              <%= f.hidden_field :room_address, value: "札幌" %>
              <%= f.submit "札幌", class: "panel-btn" %>
          　<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>