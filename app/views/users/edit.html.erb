<div class= "container-field user">
    <%= render "users/shared/error_messages", resource: @users %>
    <div class= "row">
        <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
            <ul>
                <li class=""><%= link_to "アカウント", "/users/#{current_user.id}", class: "link nonactive"%></li>
                <li class="active"><%= link_to "プロフィール", edit_user_path, class: "link"%></li>
            </ul>
        </div>
        <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
            <ul>
                <li class=""><%= link_to "アカウント", "/users/#{current_user.id}", class: "link nonactive"%></li>
                <li class="active"><%= link_to "プロフィール", edit_user_path, class: "link"%></li>
            </ul>
        </div>
        <div class="col-lg-10 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <h5>プロフィール</h5>
                    </div>
                </div>
                
                <%=form_with model: @users, local: true do |f| %>
                    <div class="update-content">
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                <div class="icon-box">
                                    <% if @users.image.present? %>
                                        <%= image_tag @users.image.thumb.url, class:"icon" %>
                                    <% else %>
                                        <%= image_tag "noimage.png", class:"icon" %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :image, class:"col-md-3 required-a" %>
                            <%= f.file_field :image, class:"mb-4 col-md-9", placeholder:"アイコン画像をアップロード" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :name, class:"col-md-3 required-a" %>
                            <%= f.text_field :name, class:"form-control mb-4 col-md-9", placeholder:"名前を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :self_introduction, class:"col-md-3 required-a" %>
                            <%= f.text_area :self_introduction, class:"form-control mb-4 col-md-9", placeholder:"自己紹介を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.submit nil, class:"col-md-2 btn btn-primary mx-3", value:"更新" %>
                        </div>
                    </div>
                <% end %>      
            </div>
        </div>
    </div>
</div>