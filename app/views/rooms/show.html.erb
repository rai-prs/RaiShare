<div class="container room-show">
    <%= render "shared/error", obj: @reservations %>
    <div class="row">
        <div class="col-md-8">
        <%= image_tag @rooms.room_image.url, class:"room-show-image" %>
        <div class="room-show-detile">
            <div class="room-show-detile-content">
            <h3>部屋名</h3>
            <p class="room-show-profile-name"><%= @rooms.room_name %></p>
            </div>
            <div class="room-show-detile-content">
            <h3>住所</h3>
            <p class="room-show-profile-address"><%= @rooms.room_address %></p>
            </div>
        </div>
        <div class="room-show-detile-content">
        <h3>部屋の詳細</h3>
        <p><%= @rooms.room_introduction %></p>
        </div>
        </div>
        <div class="col-md-4">
            <div class="room-show-nav">
                <h5 class="price-icon"><%= "#{@rooms.room_price} / 日" %></h5>
                <div class="room-show-date-select">
                    <%= form_with url: confirm_room_reservations_path(@rooms), lokal: true do |f| %>
                        <%= f.hidden_field :room_id, value: @rooms.id %>
                        <%= f.hidden_field :user_id, value: @rooms.user_id %>
                        <%= f.label :room_start_date, "開始日" %>
                        <%= f.date_field :room_start_date, class:"form-control mb-4" %>
                        <%= f.label :room_end_date, "終了日" %>
                        <%= f.date_field :room_end_date, class:"form-control mb-4" %>
                        <%= f.label :room_number, "人数" %>
                        <%= f.number_field :room_number, class:"form-control mb-4" %>
                        <%= f.submit"予約する", class:"btn btn-primary form-control" %> 
                    <% end %>
                </div>
            </div>
        </div>
  </div>
</div>
