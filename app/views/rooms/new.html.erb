<div class= "container-field user">
    <div class= "row">
        <div class=" user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <h5>ルーム情報登録</h5>
                    </div>
                </div>
                <%= render "shared/error", obj: @rooms %>
                <%=form_with model: @rooms, local: true do |f| %>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :必須, {class: "badge bg-danger me-3 my-2 w-4"} %>
                            <%= f.label :room_name, class:"col-md-3 required-a my-2" %>
                            <%= f.text_field :room_name, class:"mb-4 col-md-9", placeholder:"部屋名を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :必須, {class: "badge bg-danger me-3 my-2 w-4"} %>
                            <%= f.label :room_introduction, class:"col-md-3 required-a my-2" %>
                            <%= f.text_area :room_introduction, class:"form-control mb-4 col-md-9", placeholder:"部屋の詳細を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :必須, {class: "badge bg-danger me-3 my-2 w-4"} %>
                            <%= f.label :room_price, class:"col-md-3 required-a my-2" %>
                            <%= f.number_field :room_price, class:"form-control mb-4 col-md-9", placeholder:"1日あたりの料金の入力" %>
                        </div>
                    </div>
                     <div class="update-content">
                        <div class="row">
                            <%= f.label :必須, {class: "badge bg-danger me-3 my-2 w-4"} %>
                            <%= f.label :room_address, class:"col-md-3 required-a my-2" %>
                            <%= f.text_field :room_address, class:"form-control mb-4 col-md-9", placeholder:"住所を入力" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.label :必須, {class: "badge bg-danger me-3 my-2 w-4"} %>
                            <%= f.label :room_image, class:"col-md-3 required-a my-2" %>
                            <%= f.file_field :room_image, class:"form-control mb-4 col-md-9", placeholder:"アイコン画像をアップロード" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <%= f.submit nil, class:"col-md-2 btn btn-primary mx-3", value:"登録" %>
                        </div>
                    </div>
                <% end %>      
            </div>
        </div>
    </div>
</div>
        
